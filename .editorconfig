root = true
# Editor configuration, see http://editorconfig.org

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 4
end_of_line = crlf
max_line_length = 140

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.json]
indent_style = tab
